#include <stdio.h>
#include <stdlib.h>
#include <omp.h>
#include <time.h>

#define MIN_SIZE 1000

// Function to merge two sorted sub-arrays
void merge(int arr[], int left, int mid, int right) {
    int i, j, k;
    int n1 = mid - left + 1;
    int n2 = right - mid;

    // Create temporary arrays
    int *L = (int *)malloc(n1 * sizeof(int));
    int *R = (int *)malloc(n2 * sizeof(int));

    // Copy data to temp arrays L[] and R[]
    for (i = 0; i < n1; i++)
        L[i] = arr[left + i];
    for (j = 0; j < n2; j++)
        R[j] = arr[mid + 1 + j];

    // Merge the temp arrays back into arr[left..right]
    i = 0; // Initial index of first sub-array
    j = 0; // Initial index of second sub-array
    k = left; // Initial index of merged sub-array

    while (i < n1 && j < n2) {
        if (L[i] <= R[j]) {
            arr[k] = L[i];
            i++;
        } else {
            arr[k] = R[j];
            j++;
        }
        k++;
    }

    // Copy the remaining elements of L[], if any
    while (i < n1) {
        arr[k] = L[i];
        i++;
        k++;
    }

    // Copy the remaining elements of R[], if any
    while (j < n2) {
        arr[k] = R[j];
        j++;
        k++;
    }

    // Free the temporary arrays
    free(L);
    free(R);
}

// Sequential Merge Sort implementation
void mergeSortSequential(int arr[], int left, int right) {
    if (left < right) {
        // Same as (left + right) / 2, but avoids overflow for large left and right
        int mid = left + (right - left) / 2;

        // Sort first and second halves
        mergeSortSequential(arr, left, mid);
        mergeSortSequential(arr, mid + 1, right);

        merge(arr, left, mid, right);
    }
}

// Parallel Merge Sort implementation using OpenMP
void mergeSortParallel(int arr[], int left, int right) {
    if ((right - left + 1) <= MIN_SIZE) {
        // Base case: switch to sequential sort for small sub-arrays
        mergeSortSequential(arr, left, right);
        return;
    }

    if (left < right) {
        int mid = left + (right - left) / 2;

        // OpenMP parallel sections to execute the recursive calls concurrently
        #pragma omp parallel sections
        {
            #pragma omp section
            {
                mergeSortParallel(arr, left, mid);
            }
            #pragma omp section
            {
                mergeSortParallel(arr, mid + 1, right);
            }
        }

        // The merge operation must wait until both sections are complete
        merge(arr, left, mid, right);
    }
}

// Main function for setup, timing, and comparison
int main() {
    int n = 100000; // Array size
    
    // Allocate memory for sequential and parallel arrays
    int *arr_seq = (int *)malloc(n * sizeof(int));
    int *arr_par = (int *)malloc(n * sizeof(int));

    // Seed the random number generator
    srand(time(0));
    
    // Initialize both arrays with the same random values
    for (int i = 0; i < n; i++) {
        arr_par[i] = arr_seq[i] = rand() % 10000;
    }

    printf("Sorting %d elements...\n", n);

    // --- Sequential Merge Sort Timing ---
    double start_time = omp_get_wtime();
    mergeSortSequential(arr_seq, 0, n - 1);
    double time_seq = omp_get_wtime() - start_time;
    printf("Sequential Merge Sort Time: %f seconds\n", time_seq);

    // --- Parallel Merge Sort Timing ---
    start_time = omp_get_wtime();
    mergeSortParallel(arr_par, 0, n - 1);
    double time_par = omp_get_wtime() - start_time;
    printf("Parallel Merge Sort Time: %f seconds\n", time_par);

    // --- Performance Analysis ---
    if (time_par > 0) {
        double speedup = time_seq / time_par;
        printf("\nDifference (Sequential - Parallel): %f seconds\n", time_seq - time_par);
        printf("Speedup: %.2fx\n", speedup);
    }

    // --- Verification (Print first 20 elements of the parallel array) ---
    printf("\nVerification: First 20 elements of the sorted array:\n");
    for (int i = 0; i < (n < 20 ? n : 20); i++) {
        printf("%d ", arr_par[i]);
    }
    printf("\n\n");

    // Free allocated memory
    free(arr_seq);
    free(arr_par);

    return 0;
}
